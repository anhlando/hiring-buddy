---
import HeaderMenu from './HeaderMenu'
import JoinWaitList from "../components/JoinWaitList";
import logoFull from "../assets/logoFull.svg";

const links = [
  {
    href: "/our-story",
    label: "Our Story",
  },
  {
    href: "/our-team",
    label: "Team",
  },
  {
    href: "/client",
    label: "Client",
  },
];
---

<header class="bg-white shadow-md relative z-20 py-3">
  <div class="container mx-auto">
    <div class="flex items-center justify-between">
      <div class="flex w-full justify-between md:justify-normal md:w-auto">
        <div class="mr-20 p-3" style="width: 153px">
          <a href="/">
            <img
              src={logoFull.src}
              width={logoFull.width}
              height={logoFull.height}
              alt="Hiring Buddy."
            />
          </a>
        </div>

        <HeaderMenu client:idle />
      </div>

      <JoinWaitList client:load className="hidden md:block"/>
    </div>
  </div>
</header>
