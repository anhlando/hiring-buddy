---
import HeaderMenu from "./HeaderMenu";
import JoinWaitList from "../components/JoinWaitList";
import logoFull from "../assets/logoFull.svg";

const links = [
  {
    href: "/our-story/",
    label: "Our Story",
  },
  {
    href: "/our-team/",
    label: "Team",
  },
  {
    href: "/client/",
    label: "Client",
  },
];
---

<header class="bg-white sticky top-0 z-20 py-3" id="main-header">
  <div class="container mx-auto">
    <div class="flex items-center justify-between w-full md:w-auto">
      <div class="flex w-full justify-between md:justify-normal">
        <div class="mr-20" style="width: 153px">
          <a href="/">
            <img
              src={logoFull.src}
              width={logoFull.width}
              height={logoFull.height}
              alt="Hiring Buddy."
            />
          </a>
        </div>

        <HeaderMenu client:idle className="md:flex-1" />
      </div>

      <div class="w-[220px] whitespace-nowrap hidden md:block">
        <JoinWaitList client:load />
      </div>
    </div>
  </div>
</header>

<style>
  .headerShadow {
    box-shadow: 0px 15px 14px #e5e5e540;
  }
</style>

<script>
  // get main-header
  const mainHeader = document.getElementById("main-header");

  if (mainHeader) {
    // listen on page scroll change
    window.addEventListener("scroll", () => {
      // if scrollY > 0, add shadow
      if (window.scrollY > 0) {
        mainHeader.classList.add("headerShadow");
      } else {
        mainHeader.classList.remove("headerShadow");
      }
    });
  }
</script>
