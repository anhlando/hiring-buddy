---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import ScrollText from "../components/ScrollText";
import HowWeWork from "../components/HowWeWork.astro";
import iconHeart from "../assets/icon-heart.png";
import JoinWaitList from "../components/JoinWaitList";

import ap1 from "../assets/ap-1.svg";
import ap2 from "../assets/ap-2.svg";
import ap3 from "../assets/ap-3.svg";
import Highlight from "../components/Highlight.astro";

const SCROLL_TEXT = `We get you, recruitment is broken. You're applying to tonnes of roles, just to be ghosted and rejected.
We believe recruitment should be effortless and enjoyable. We've got your back. Let's fix this together!`;

const WHY_CHOSE_USE = [
	{
		title: "No cover letters, no resumes",
		description: "Simply connect with your LinkedIn profile",
		image: ap1,
	},
	{
		title: "Buddy AI does the matching",
		description: "We find suitable positions for you based off your true value",
		image: ap2,
	},
	{
		title: "Land the ideal job",
		description: "Companies initiate connect with you",
		image: ap3,
	},
];
---

<Layout title="Hiring Buddy.">
	<main>
		<section class="pt-20 bg-white">
			<div class="container mx-auto">
				<h1 class="text-center mb-6">
					The hiring experience <br /> you'll <Highlight>love</Highlight>
				</h1>

				<p class="text-center mb-10 text-lg">
					Hiring buddy understands your strengths and drivers to connect you
					with a workspace to thrive in!
				</p>
			</div>

			<div class="text-center mb-10">
				<JoinWaitList />
			</div>
			<div class="flex justify-center overflow-hidden">
				<div class="md:w-1/2 md:-mb-48 relative -right-6">
					<video
						src="/videos/desktop-screen-1.mp4"
						autoplay
						playsinline
						muted
						width="100%"
						class="rounded-[12px]"></video>
				</div>
			</div>
		</section>

		<section class="bg-white relative z-10 pt-20 pb-32">
			<div class="container mx-auto">
				<div class="grid md:grid-cols-3">
					{
						WHY_CHOSE_USE.map((item) => (
							<div class="flex md:justify-center mb-12 md:mb-0">
								<div class="flex md:flex-col md:justify-center md:items-center md:text-center md:max-w-[256px]">
									<div class="md:mb-5 flex-none w-12 mr-6 md:mr-0 pt-1 md:pt-0">
										<img
											src={item.image.src}
											width={item.image.width}
											height={item.image.height}
										/>
									</div>

									<div class="flex-1">
										<h3 class="font-bold mb-3 text-base">{item.title}</h3>
										<p class="font-base">{item.description}</p>
									</div>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<section class="bg-white">
			<div class="container mx-auto">
				<ScrollText text={SCROLL_TEXT} />
			</div>
		</section>

		<section>
			<HowWeWork />
		</section>

		<section class="bg-white">
			<div class="container text-center mx-auto py-40">
				<div class="max-w-xl mx-auto">
					<div class="flex justify-center mb-8">
						<Image
							src={iconHeart}
							width={58}
							aspectRatio="1:1"
							alt={"icon heart"}
						/>
					</div>

					<div class="text-center mb-10 text-black text-[26px] leading-10">
						Please register your interest for early access to HiringBuddy beta
						community.
					</div>

					<JoinWaitList className="mb-3" />
					<div class="flex justify-center">
						<div
							class="w-[281px] text-center text-gray-600 text-[14px] font-normal"
						>
							Donâ€™t worry, we will not share anything with your network
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
